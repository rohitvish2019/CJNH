        <th scope="col"><i class="fa-regular fa-file-powerpoint"></i> Prescription</th>
        <th><i class="fa-solid fa-square-check"></i> Status</th>
        <!--
        <th><i class="fa-solid fa-prescription"></i> Prescription</th>
        -->
      </tr>
    </thead>
    <%-include('_loader')%>
