<body>
  <header>
    <%-include('_header')%>
  </header>
  <div class="search-div">
    <input id="selectedDate" range style="width: 15%; height: 75%; font-size: larger; margin-top: .3%" type="date"
      name="" id="">
    <button onclick="getAppointments()" class="btn" style="background-color:#025E73; width:15%;margin-right: 25px;"><i class="fas fa-search"></i> Search</button>
    <input type="checkbox" name="" id="ShowHideDisabled" onchange="getAppointments()" style="margin-right: 5px;">Show Disabled Appointments
  </div>
  
  <table class="table table-striped table-bordered text-center">
    <thead>
      <tr class="bg">
        <th scope="col">#</th>
        <th scope="col"><i class="fa-solid fa-stethoscope"></i> Dr.Name</th>
        <th scope="col"><i class="fas fa-user"></i> Name</th>
        <th scope="col"><i class="fa-solid fa-people-group"></i> Age</th>
        <th scope="col"><i class="fa-solid fa-venus-mars"></i> Gender</th>
        <th scope="col"><i class="fas fa-map-marker-alt"></i> Address</th>
